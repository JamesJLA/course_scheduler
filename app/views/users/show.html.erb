<div class="row">
  <div class="col-12">
    <h1 class="mb-4"><%= @user.email %></h1>
    
    <h2 class="mb-3">Schedule</h2>

    <% if @enrollments.any? %>
      <div class="table-responsive">
        <table class="table table-dark table-hover">
          <thead>
            <tr>
              <th>Course Code</th>
              <th>Course Name</th>
              <th>Semester</th>
              <th>Credits</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody>
            <% @enrollments.each do |enrollment| %>
              <tr>
                <td><%= enrollment.course.code %></td>
                <td><%= enrollment.course.name %></td>
                <td><%= enrollment.course.semester %></td>
                <td><%= enrollment.course.credits %></td>
                <td><span class="badge bg-info"><%= enrollment.status %></span></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="alert alert-info">No enrollments found.</div>
    <% end %>

    <div class="mt-4">
      <%= link_to "Back to Search", users_path, class: "btn btn-outline-light" %>
    </div>
  </div>
</div>